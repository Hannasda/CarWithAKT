@model CarWithAKT.Models.Country

@{
    ViewBag.Title = "Новая страна";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="pagetitle">
        <h2>Новая страна-производитель</h2>
        <form action="@Url.Action("Index","Countries")"><button style="display:block;margin: 0 auto" class="mybutton">Вернутся к списку</button></form>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div style="display:flex;flex-direction:column;justify-content:center;align-items:center;">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "" })
        <div class="">
            @Html.LabelFor(model => model.Name, "Название", htmlAttributes: new { @class = "", @style = "width:300px;text-align:center" })
            <div style="display:flex;justify-content:center;align-items:center">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "mybutton", @style="width:300px" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "" })
            </div>
            <div style="margin-top:10px">
                @Html.LabelFor(model => model.Shortname, "Короткое названия", htmlAttributes: new { @class = "", @style = "width:300px;text-align:center;" })
                <div style="display:flex;justify-content:center;align-items:center">
                    @Html.DropDownList("Shortname", null, htmlAttributes: new { @class = "mybutton", @style = "width:300px;" })
                    @Html.ValidationMessageFor(model => model.Shortname, "", new { @class = "", })
                </div>
            </div>
        </div>

            <button style="margin-top:20px" type="submit" value="Save" class="mybutton">Сохранить</button>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    </div>