@model IEnumerable<CarWithAKT.Models.Country>

@{
    ViewBag.Title = "Країни";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="pagetitle">
        <h2>Країни:</h2>

        @if (User.IsInRole("admin"))
        {
            <form action="@Url.Action("AdminIndex","Countries")"><button style="display:block;width:170px;margin: 0 auto" class="mybutton">Администрирование</button></form>
        }

    </div>
    <p>

    </p>

    <div style="display:flex;justify-content:center;">
        <table class="table" style="width:400px">
            
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center; display:flex;justify-content:center">
                        <img style="border:1px solid #cecece; width:33px;height:20px" src="~/Img/Flags/@(item.Shortname).png" />
                        <p style="width:100px">@Html.DisplayFor(modelItem => item.Name)</p>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>