@model CarShop.Models.Location

@{
    ViewBag.Title = "Новый салон";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<div class="container">
    <div class="pagetitle">
        <h2>Новый салон</h2>
        <form action="@Url.Action("Index","Locations")"><button style="display:block;margin: 0 auto" class="mybutton">Вернутся к списку</button></form>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                
                <div class="col-md-10">
                    <p>Название салона:</p>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
               
                <div class="col-md-10">
                    <p>Адресс:</p>
                    @Html.EditorFor(model => model.Adress, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Adress, "", new { @class = "text-danger" })
                </div>
            </div>

            <button type="submit" value="Save" class="mybutton">Сохранить</button>
        </div>
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    </div>